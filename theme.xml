<theme>
   <formatVersion>4</formatVersion>

<include subset="iconset" name="1-standard icons">./_inc/iconsets/default.xml</include>
<include subset="iconset" name="2-SNES">./_inc/iconsets/snes.xml</include>
<include subset="iconset" name="3-SWITCH">./_inc/iconsets/switch.xml</include>
<include subset="iconset" name="4-XBox">./_inc/iconsets/xbox.xml</include>
<include subset="iconset" name="5-PSX">./_inc/iconsets/psx.xml</include>
<include subset="iconset" name="6-Arcade">./_inc/iconsets/arcade.xml</include>

<sound name="directory">
   <path>./music</path>
</sound>

<feature supported="carousel">   
   <view name="system">
 <carousel name="systemcarousel">
        <type>horizontal</type>
        <pos>0 -0.18</pos>
        <size>1 1</size>
        <logoScale>1.1</logoScale>
        <logoSize>0.45 0.45</logoSize>
        <color>00000000</color>
        <maxLogoCount>5</maxLogoCount>
		<logoAlignment>bottom</logoAlignment>
 </carousel> 
      <text name="systemInfo">
         <pos>0 0.77</pos>
         <backgroundColor>ffffffc0</backgroundColor>
         <color>000000</color>
         <fontPath>./_inc/fonts/OpenSans-Bold.ttf</fontPath>
	     <fontSize>0.04</fontSize>
         <zIndex>45</zIndex> 
      </text>
   </view>
</feature>

   <view name="system, detailed">
      <image name="systems">
		 <path>./systems/$system.png</path>
	  </image>
	  <image name="logo" region="eu">
		 <path>./systems/eu/$system.png</path>
	  </image>
      <image name="logo" region="jp">
		 <path>./systems/jp/$system.png</path>
	  </image>
	  <image name="logo" region="us">
		 <path>./systems/us/$system.png</path>
	  </image>
	  
